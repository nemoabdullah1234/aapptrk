            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fadingEdge="horizontal"
            android:padding="5dp"
            android:text="ALL BREACHES"
            android:textColor="@color/all_breaches" />

        <TextView
