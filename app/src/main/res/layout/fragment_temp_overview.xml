    <RelativeLayout
        android:id="@+id/rl_breach_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAttrValue2"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <TextView
