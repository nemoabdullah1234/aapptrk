<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_outer"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        fontPath="fonts/source_sans_pro_regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:text="dfdsfdsfsf"
        android:textSize="@dimen/text_14"
        android:textColor="@color/five_a" />


    <TextView
        android:id="@+id/tv_sub_title"
        fontPath="fonts/source_sans_pro_semi_bold.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:textSize="@dimen/text_18"
        android:textColor="@color/four_one"
        android:text="dfdsfdsfdsfdsfdsffdf" />

    <TextView
        android:id="@+id/txt_address"
        fontPath="fonts/source_sans_pro_regular.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sub_title"
        android:layout_marginLeft="8dp"
        android:drawableLeft="@drawable/icon_transit_location"
        android:gravity="center_vertical"
        android:textColor="@color/five_a"
        android:layout_marginBottom="8dp"
        android:drawablePadding="6dp"
        android:textSize="@dimen/text_14"
        android:maxLines="1" />


    <ImageView
        android:id="@+id/caseAssociated"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_case_assigned"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/caseAssociatedDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_address"
        android:background="@color/e_4"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_name"
            fontPath="fonts/source_sans_pro_semi_bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:lines="1"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_phone"
            android:textSize="@dimen/text_16"
            android:textColor="@color/five_a"
            android:text="dfdsfdsfdsfdsfdsffdf" />

        <TextView
            android:id="@+id/tv_phone"
            fontPath="fonts/source_sans_pro_regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/call_btn"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="14sp" />


    </RelativeLayout>

</RelativeLayout>