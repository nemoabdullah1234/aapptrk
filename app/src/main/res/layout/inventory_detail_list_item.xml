<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/login_margin_right"
    android:paddingTop="@dimen/item_padding_top"
    android:paddingRight="@dimen/login_margin_right"
    android:paddingBottom="@dimen/item_padding_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/edtCount"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_id"
            fontPath="fonts/source_sans_pro_regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/five_a"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_item_name"
            fontPath="fonts/source_sans_pro_semi_bold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_status"
            android:text=""
            android:textColor="@color/four_one"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_qty"
            fontPath="fonts/source_sans_pro_regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/seven_b"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>


    <EditText
        android:id="@+id/edtCount"
        fontPath="fonts/source_sans_pro_regular.ttf"
        android:layout_width="40dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/inventory_edit_text_background"
        android:gravity="center"
        android:inputType="number"
        android:text=""
        android:textColor="@color/four_one"
        android:textSize="@dimen/text_16" />

</RelativeLayout>
